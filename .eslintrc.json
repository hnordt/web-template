{
  "extends": [
    "next/core-web-vitals",
    "plugin:jest-dom/recommended",
    "plugin:testing-library/react",
    "plugin:cypress/recommended",
    "prettier"
  ],
  "rules": {
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": {
          "minProperties": 1
        }
      }
    ],
    "arrow-body-style": ["error", "as-needed"]
  }
}
